# Hanks Tank Backend Environment Configuration
NODE_ENV=development
PORT=3000

# Google Cloud Platform Configuration
GCP_PROJECT_ID=hankstank
USE_DEFAULT_GCP_CREDENTIALS=true

# BigQuery Configuration  
BQ_DATASET=mlb_historical_data
BQ_LOCATION=US
BQ_JOB_TIMEOUT=30000

# Cloud Storage Configuration
GCS_BUCKET_NAME=hanks_tank_data
GCS_BASE_FOLDER=

# Data Source Configuration
HISTORICAL_DATA_CUTOFF=2

# Cache TTL Settings (in seconds)
CACHE_TTL_HISTORICAL=86400    # 24 hours for historical data
CACHE_TTL_CURRENT=1800        # 30 minutes for current season data
CACHE_TTL_LIVE=600            # 10 minutes for live data (standings, schedules)

# MLB API Configuration
MLB_API_BASE_URL=https://statsapi.mlb.com/api/v1
MLB_API_TIMEOUT=5000
MLB_API_RETRIES=3

# News API Configuration
NEWS_API_KEY=3e5d2f278e6241659dbe9464f9b141d7
NEWS_API_BASE_URL=https://newsapi.org/v2
NEWS_FETCH_SCHEDULE=0 8,20 * * *  # Cron pattern for 8 AM and 8 PM daily

# Cache Configuration (Redis)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Cache TTL Settings (in seconds)
CACHE_TTL_TEAMS=86400
CACHE_TTL_PLAYERS=3600
CACHE_TTL_GAMES=300
CACHE_TTL_GAMES_LIVE=30
CACHE_TTL_STANDINGS=3600
CACHE_TTL_SCHEDULE=1800
CACHE_TTL_STATS=3600

# Database Configuration (PostgreSQL - optional for analytics)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mlb_analytics
DB_USER=postgres
DB_PASSWORD=
DB_SSL=false

# External APIs
WEATHER_API_KEY=
NEWS_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_NAME=app.log
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14

# Features
FEATURE_REALTIME_UPDATES=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CACHING=true
FEATURE_COMPRESSION=true

# Security
HELMET_ENABLED=true
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
