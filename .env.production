# Production Environment Configuration for GCP App Engine
# These variables are set in app.yaml and can be overridden here

NODE_ENV=production
LOG_LEVEL=info

# GCP Configuration
GOOGLE_CLOUD_PROJECT=hankstank
GCP_PROJECT_ID=hankstank
GCP_BUCKET_NAME=hanks_tank_data
BQ_DATASET=mlb_historical_data

# MLB API Configuration
MLB_API_BASE_URL=https://statsapi.mlb.com/api/v1
MLB_API_TIMEOUT=10000
MLB_API_RETRIES=3

# Cache Configuration (Redis disabled in production)
CACHE_TTL_TEAMS=86400
CACHE_TTL_PLAYERS=3600
CACHE_TTL_GAMES=300
CACHE_TTL_GAMES_LIVE=30
CACHE_TTL_STANDINGS=3600
CACHE_TTL_SCHEDULE=1800
CACHE_TTL_STATS=3600

# External API Configuration
FANGRAPHS_BASE_URL=https://www.fangraphs.com/api
STATCAST_BASE_URL=https://baseballsavant.mlb.com/statcast_search

# Performance Settings
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=100
